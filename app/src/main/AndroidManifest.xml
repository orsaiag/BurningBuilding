<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.burningbuilding">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BurningBuilding">
        <activity android:name=".GameOver"></activity>
        <activity android:name=".Floor1Activity" />
        <activity android:name=".Floor2Activity" />
        <activity android:name=".Floor3Activity" />
        <activity android:name=".Floor4Activity" />
        <activity android:name=".Floor5Activity" />
        <activity android:name=".Floor6Activity" />
        <activity android:name=".Floor7Activity" />
        <activity android:name=".EndGameActivity" />
        <activity android:name=".Floor8Activity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".RecordsActivity" />
        <activity android:name=".LoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".SoundServiceElevator"
            android:enabled="true" />
        <service
            android:name=".SoundFire"
            android:enabled="true" />
        <service
            android:name=".SoundServiceVictory"
            android:enabled="true" />
        <service
            android:name=".SoundWrongAnswer"
            android:enabled="true" />
        <service
            android:name=".SoundGameOver"
            android:enabled="true" />
        <service
            android:name=".SoundEndGame"
            android:enabled="true" />
    </application>

</manifest>