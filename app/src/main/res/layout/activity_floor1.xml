<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/floor1"
    android:orientation="vertical">
    <ImageButton
        android:id="@+id/play_button_morse"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/ic_baseline_play_circle_outline_24"
        app:layout_constraintBottom_toTopOf="@+id/dot_pic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/dot_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="225dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/yellow_button_unpressed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dot_pic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/plain_circle"
        app:layout_constraintBottom_toTopOf="@+id/dot_button"
        app:layout_constraintEnd_toEndOf="@+id/dot_button"
        app:layout_constraintStart_toStartOf="@+id/dot_button" />

    <ImageView
        android:id="@+id/line_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="200dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/black_line"
        app:layout_constraintBottom_toTopOf="@+id/line_button"
        app:layout_constraintEnd_toEndOf="@+id/line_button"
        app:layout_constraintStart_toStartOf="@+id/line_button"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/line_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/yellow_button_unpressed"
        app:layout_constraintBottom_toBottomOf="@+id/dot_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dot_button" />

    <ImageView
        android:id="@+id/morse_code"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/morse_first"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/morse_code2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/morse_second"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/morse_code3"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/morse_third"
        tools:ignore="MissingConstraints" />



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pass_code_tf"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="enter passcode"
        app:layout_constraintEnd_toEndOf="@+id/line_button"
        app:layout_constraintStart_toStartOf="@+id/dot_button"
        app:layout_constraintTop_toBottomOf="@+id/dot_button">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

