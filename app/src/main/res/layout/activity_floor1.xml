<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:orientation="vertical" android:background="@drawable/floor1" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton android:background="@null" android:layout_height="50dp" android:layout_width="50dp" android:src="@drawable/ic_baseline_play_circle_outline_24" android:scaleType="fitXY" android:layout_marginStart="32dp" android:id="@+id/play_button_morse"/>


    <LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent"  android:layout_marginHorizontal="90dp" android:layout_marginTop="40dp">

    <ImageView android:background="@null" android:layout_height="20dp" android:layout_width="20dp" android:src="@drawable/plain_circle" android:scaleType="fitXY" android:layout_marginTop="25dp" android:layout_marginStart="30dp" android:id="@+id/dot_pic"/>

    <ImageView android:background="@null" android:layout_height="70dp" android:layout_width="70dp" android:src="@drawable/black_line" android:scaleType="fitXY" android:layout_marginStart="90dp" android:id="@+id/line_pic"/>

</LinearLayout>


    <LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginHorizontal="60dp">

    <ImageView android:background="@null" android:layout_height="40dp" android:layout_width="40dp" android:src="@drawable/yellow_button_unpressed" android:scaleType="fitXY" android:layout_marginStart="50dp" android:id="@+id/dot_button"/>

    <ImageView android:background="@null" android:layout_height="40dp" android:layout_width="40dp" android:src="@drawable/yellow_button_unpressed" android:scaleType="fitXY" android:layout_marginStart="90dp" android:id="@+id/line_button"/>

</LinearLayout>


    <com.google.android.material.textfield.TextInputLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginHorizontal="90dp" android:hint="enter passcode" style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    <com.google.android.material.textfield.TextInputEditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/pass_code_tf" android:inputType="text"/>

</com.google.android.material.textfield.TextInputLayout>

    <ImageButton android:background="@null" android:layout_height="wrap_content" android:layout_width="match_parent" android:src="@drawable/ic_baseline_run_circle_24" android:layout_marginTop="20dp" android:id="@+id/open_door_IB"/>


   <LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="16dp">

    <ImageView android:background="@null" android:layout_height="180dp" android:layout_width="200dp" android:src="@drawable/morse_first" android:scaleType="fitXY" android:id="@+id/morse_code" android:layout_weight="0" tools:ignore="MissingConstraints"/>


    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent">

    <ImageView android:background="@null" android:layout_height="90dp" android:layout_width="200dp" android:src="@drawable/morse_second" android:scaleType="fitXY" android:id="@+id/morse_code2" android:layout_weight="0" tools:ignore="MissingConstraints"/>

    <ImageView android:background="@null" android:layout_height="100dp" android:layout_width="200dp" android:src="@drawable/morse_third" android:scaleType="fitXY" android:id="@+id/morse_code3" tools:ignore="MissingConstraints"/>

</LinearLayout>
</LinearLayout>

</LinearLayout>