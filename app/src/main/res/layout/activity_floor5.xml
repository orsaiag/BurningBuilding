<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/floor5riddle">

  <ImageButton
      android:id="@+id/reset_counter_btn"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_gravity="left"
      android:layout_marginStart="15dp"
      android:background="@null"
      android:scaleType="fitXY"
      android:src="@drawable/ic_baseline_replay_24" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Press here"
      android:id="@+id/press_tv"
      android:textColor="@color/black"
      android:textSize="15dp"
      android:layout_marginTop="220dp"
      android:src="@drawable/elevator_buttn"/>

  <ImageButton
      android:id="@+id/elevator_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="left|center"
      android:layout_marginBottom="150dp"
      android:layout_marginStart="15dp"
      android:background="@null"
      android:scaleType="fitXY"
      android:src="@drawable/elevator_buttn" />

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
      android:layout_marginTop="0dp"
      android:gravity="center"
      android:layout_gravity="bottom"
    android:orientation="horizontal">


  <Button
        android:id="@+id/black_btn"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:text="0"
        android:backgroundTint="@color/black"/>

    <Button
        android:layout_weight="1"
        android:id="@+id/yellow_btn"
        android:layout_width="wrap_content"
        android:text="0"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/yellow"/>

    <Button
        android:layout_weight="1"
        android:id="@+id/orange_btn"
        android:layout_width="wrap_content"
        android:text="0"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/orange"/>

    <Button
        android:layout_weight="1"
        android:id="@+id/blue_btn"
        android:layout_width="wrap_content"
        android:text="0"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"/>

    <Button
        android:layout_weight="1"
        android:id="@+id/green_btn"
        android:layout_width="wrap_content"
        android:text="0"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"/>
    </LinearLayout>
</LinearLayout>
